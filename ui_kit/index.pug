                input(type="text", class="registrationForm__name", value="Имя")
 
    block content    
        mixin labelforname(id, className, name)
            label(for= ""+id, class= ""+className)=name   
        mixin buttonforname(type, id, value, name)
            button(type= ""+type, id= ""+id, value=""+value)=name

        +labelforname("com", "labelform", "забронировать")
        +buttonforname("submit", "com", "22.03.1100", "открыть")
        