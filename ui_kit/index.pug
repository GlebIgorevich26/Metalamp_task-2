                    img.findNumbers__button--img(src="./img/arrow_forward.svg", alt="")
                
            // In this are begin form submit to website

            div.submitForm.container
                h2.submitForm__title Войти
                input(type="email", class="submitForm__email", value="Email")
                input(type="password", class="submitForm__passwpord", value="Пароль") 
                button(type="button", class="submitForm__button", value="Enter") войти 
                    img.findNumbers__button--img(src="./img/arrow_forward.svg", alt="")
                div.submitForm__footer
                    p.submitForm__footer--subtitle Нет аккаунта на Toxin?
